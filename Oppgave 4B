# Antall innbyggere i millioner
data = {
    "Norge": ["Oslo", 0.634],
    "England": ["London", 8.982],
    "Frankrike": ["Paris", 2.161],
    "Italia": ["Roma", 2.873]
}

# hovedstad og innbyggertall
def finn_hovedstad_og_innbyggere(land):
    if land in data:
        hovedstad, innbyggere = data[land]
        print(f"{hovedstad} er hovedstaden i {land} og det er {innbyggere:.3f} mill. innbyggere i {hovedstad}.")
    else:
        print(f"beklager,Landet {land} finnes ikke i databasen, fordi dette er bare et arbeidskrav")

#land
land = input("Skriv inn et land: ")

# output
finn_hovedstad_og_innbyggere(land)
