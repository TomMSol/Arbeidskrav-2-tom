import numpy as np

def grader_til_radianer(v_grad):
    """
    Konverterer en vinkel fra grader til radianer.
    :param v_grad: Vinkelen i grader (float)
    :return: Vinkelen i radianer (float)
    """
    v_rad = v_grad * np.pi / 180
    return v_rad

# skriv inn gradtallet
v_grad = float(input('Skriv inn gradtallet: '))

# radianer
v_rad = grader_til_radianer(v_grad)

# resultat
print(f'Vinkelen {v_grad} grader tilsvarer {v_rad:.4f} radianer.')
